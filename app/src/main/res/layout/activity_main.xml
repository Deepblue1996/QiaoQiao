<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:background="#6666ff"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.intelligence.dpwork.weight.StatusBarPaddingView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <RelativeLayout
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:layout_centerVertical="true"
                        android:id="@+id/menuImg"
                        android:src="@mipmap/ic_menu"
                        android:layout_width="30dp"
                        android:padding="4dp"
                        android:layout_height="30dp"/>

                <LinearLayout
                        android:layout_centerInParent="true"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:id="@+id/seeImg"
                            android:src="@mipmap/see"
                            android:layout_width="35dp"
                            android:layout_height="15dp"/>

                    <TextView
                            android:layout_marginTop="2dp"
                            android:textSize="10sp"
                            android:textColor="@color/white"
                            android:text="@string/app_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:ignore="SmallSp"/>
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

        <com.intelligence.dpwork.weight.DpRecyclerView
                android:id="@+id/recyclerView"
                android:layout_marginStart="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

        </com.intelligence.dpwork.weight.DpRecyclerView>

    </LinearLayout>

    <android.support.design.widget.NavigationView
            android:id="@+id/navView"
            android:layout_gravity="left"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="RtlHardcoded">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <com.intelligence.dpwork.weight.StatusBarPaddingView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <com.intelligence.dpwork.weight.DpRecyclerView
                    android:id="@+id/drawerLayoutRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

            </com.intelligence.dpwork.weight.DpRecyclerView>
        </LinearLayout>
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>